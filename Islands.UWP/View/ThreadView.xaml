<UserControl x:Name="userControl"
    x:Class="Islands.UWP.ThreadView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Islands.UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <UserControl.Resources>
    </UserControl.Resources>
    <RelativePanel Background="{Binding Background,ElementName=userControl}">
        <CheckBox Name="IsSelectedBox" Visibility="Collapsed"></CheckBox>
        <StackPanel Margin="2"
                    RelativePanel.Below="IsSelectedBox"
                    RelativePanel.AlignLeftWithPanel="True"
                    RelativePanel.AlignRightWithPanel="True">
            <RelativePanel>
                <Grid Background="{ThemeResource SystemControlHighlightAltListAccentLowBrush}"
                      Opacity="0.6"
                      RelativePanel.AlignLeftWithPanel="True"
                      RelativePanel.AlignRightWithPanel="True"
                      RelativePanel.AlignTopWithPanel="True"
                      RelativePanel.AlignBottomWithPanel="True"></Grid>
                <TextBlock Name="title"
                           Text="{x:Bind threadTitle}"
                           Visibility="{x:Bind threadIsHadTitle}"
                           IsTextSelectionEnabled="{x:Bind IsTextSelectionEnabled}"
                           Foreground="Red"
                           FontSize="{Binding TitleFontSize}">
                </TextBlock>
                <TextBlock Name="email" 
                           Text="{x:Bind threadEmail}"
                           Visibility="{x:Bind threadIsHadEmail}"
                           IsTextSelectionEnabled="{x:Bind IsTextSelectionEnabled}"
                           RelativePanel.Below="title"
                           Foreground="Red"
                           FontSize="{Binding TitleFontSize}">
                </TextBlock>
                <TextBlock Name="name"
                           Text="{x:Bind threadName}"
                           Visibility="{x:Bind threadIsHadName}"
                           IsTextSelectionEnabled="{x:Bind IsTextSelectionEnabled}"
                           RelativePanel.Below="email"
                           Foreground="Red"
                           FontSize="{Binding TitleFontSize}">
                </TextBlock>
                <TextBlock Name="txtCreateDate" 
                           Text="{x:Bind threadCreateDate}"
                           IsTextSelectionEnabled="{x:Bind IsTextSelectionEnabled}"
                           RelativePanel.Below="name"
                           Margin="0,0,5,0"
                           FontSize="{Binding TitleFontSize}">
                </TextBlock>
                <TextBlock Name="id"
                           Text="No."
                           RelativePanel.LeftOf="txtId"
                           FontSize="{Binding TitleFontSize}">
                </TextBlock>
                <TextBlock Name="txtId" 
                           Text="{x:Bind threadNo}" 
                           IsTextSelectionEnabled="{x:Bind IsTextSelectionEnabled}"
                           RelativePanel.AlignRightWithPanel="True"
                           FontSize="{Binding TitleFontSize}">
                </TextBlock>
                <!--<TextBlock Name="userid"
                           Text="ID:"
                           RelativePanel.Below="txtCreateDate"
                           >
                </TextBlock>-->
                <TextBlock Name="txtUserid" 
                           Text="{x:Bind threadUid}"
                           IsTextSelectionEnabled="{x:Bind IsTextSelectionEnabled}"
                           RelativePanel.Below="txtCreateDate"
                           FontSize="{Binding TitleFontSize}">
                </TextBlock>
                <TextBlock Name="replyCount"
                           Text="回复:"
                           RelativePanel.LeftOf="txtReplyCount"
                           RelativePanel.Below="id"
                           FontSize="{Binding TitleFontSize}">
                </TextBlock>
                <TextBlock Name="txtReplyCount"
                           Text="{x:Bind threadReplyCount}"
                           RelativePanel.AlignRightWithPanel="True"
                           RelativePanel.Below="id"
                           FontSize="{Binding TitleFontSize}">
                </TextBlock>
            </RelativePanel>
            <ContentControl Name="txtContent"
                            Content="{x:Bind threadContent}">
            </ContentControl>
            <RelativePanel>
                <Button Name="ShowImageButton" 
                        Background="Transparent" 
                        Foreground="{ThemeResource HyperlinkForegroundThemeBrush}"
                        Click="ShowImage_Click"
                        Visibility="Collapsed">显示图片</Button>
                <Image Name="imageBox"  
                   MaxHeight="200" 
                   MaxWidth="200"
                   HorizontalAlignment="Left"                       
                   ImageFailed="ImageBox_ImageFailed"/>
            </RelativePanel>
        </StackPanel>
    </RelativePanel>
</UserControl>
