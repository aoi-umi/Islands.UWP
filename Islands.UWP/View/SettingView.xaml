<UserControl
    x:Class="Islands.UWP.SettingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Islands.UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style TargetType="ToggleSwitch">
            <Setter Property="OffContent" Value="关"></Setter>
            <Setter Property="OnContent" Value="开"></Setter>
        </Style>
    </UserControl.Resources>
    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Row="0" HorizontalScrollMode="Disabled"
                      VerticalScrollMode="Auto">
            <StackPanel>
                <StackPanel Margin="5">
                    <StackPanel Margin="5">
                        <TextBlock Text="夜间模式" FontSize="16"></TextBlock>
                        <ToggleSwitch Name="NightModeSwitch" Toggled="NightModeSwitch_Toggled"/>
                    </StackPanel>
                    <StackPanel Margin="5">
                        <TextBlock Text="隐藏菜单" FontSize="16"></TextBlock>
                        <ToggleSwitch Name="IsHideMenuSwitch" />
                    </StackPanel>
                    <StackPanel Margin="5">
                        <TextBlock Text="无图模式" FontSize="16"></TextBlock>
                        <ToggleSwitch Name="NoImageSwitch" />
                    </StackPanel>
                    <RelativePanel Margin="5">
                        <TextBlock Text="数据同步" FontSize="16" RelativePanel.AlignVerticalCenterWithPanel="True"/>
                        <Button Name="DataRoamingButton" RelativePanel.AlignRightWithPanel="True"
                            Content="&#xE174;"
                            FontFamily="Segoe MDL2 Assets"
                            FontSize="24"
                            Margin="0,0,5,0"
                            Background="Transparent">   
                        </Button>
                    </RelativePanel>
                    <StackPanel Margin="5">
                        <TextBlock Text="图片保存" FontSize="16"></TextBlock>
                        <RelativePanel>
                            <CheckBox Name="IsAskEachTimeBox" Content="每次询问" IsChecked="True"/>
                            <TextBlock Name="ImagePathBox"
                                   TextWrapping="Wrap"
                                   Visibility="Collapsed"></TextBlock>
                        </RelativePanel>
                    </StackPanel>
                    <StackPanel Margin="5">
                        <RelativePanel>
                            <TextBlock Text="设置背景" FontSize="16"  RelativePanel.AlignVerticalCenterWithPanel="True"/>
                            <Button Name="SetImagePathButton" 
                                RelativePanel.LeftOf="CancelButton" 
                                Content="&#xE25A;"
                                Background="Transparent"
                                FontSize="18"
                                FontFamily="Segoe MDL2 Assets"
                                Click="SetImagePathButton_Click"></Button>
                            <Button Name="CancelButton"
                                Content="&#xE10A;"
                                Background="Transparent"
                                FontSize="18"
                                FontFamily="Segoe MDL2 Assets"
                                RelativePanel.AlignRightWithPanel="True"
                                Click="CancelButton_Click"/>
                        </RelativePanel>
                    </StackPanel>
                    <StackPanel Margin="5">
                        <TextBlock Text="遮罩透明度" FontSize="16"></TextBlock>
                        <Slider Name="MaskOpacitySlider" Value="0" Minimum="0" Maximum="90" ValueChanged="MaskOpacitySlider_ValueChanged"></Slider>
                    </StackPanel>
                    <StackPanel Margin="5">
                        <TextBlock Text="字体大小" FontSize="16"></TextBlock>
                        <Slider Name="TitleFontSizeSlider" Value="10" Minimum="1" Maximum="100"></Slider>
                        <Slider Name="ContentFontSizeSlider" Value="16" Minimum="1" Maximum="100"></Slider>
                        <TextBlock Name="Title" 
                           FontSize="{Binding ElementName=TitleFontSizeSlider,Path=Value,Mode=OneWay}"
                           Text="标题">
                        </TextBlock>
                        <TextBlock Name="Content" 
                           FontSize="{Binding ElementName=ContentFontSizeSlider,Path=Value,Mode=OneWay}"
                           Text="内容"></TextBlock>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
        <Grid Grid.Row="2">
            <RelativePanel Background="{ThemeResource SystemControlHighlightAltListAccentLowBrush}">
                <Button Name="BackButton"
                    Content="&#xE80F;"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="24"
                    Margin="0,0,5,0"
                    Background="Transparent">
                </Button>
            </RelativePanel>
        </Grid>
    </Grid>
</UserControl>
