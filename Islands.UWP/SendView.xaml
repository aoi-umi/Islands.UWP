<UserControl
    x:Class="Islands.UWP.SendView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Islands.UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style TargetType="TextBox">
            <Setter Property="BorderThickness" Value="0"></Setter>
            <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
            <Setter Property="HorizontalAlignment" Value="Stretch"></Setter>
            <Setter Property="Margin" Value="5,0,0,0"></Setter>
            <Setter Property="Padding" Value="0"></Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <RelativePanel 
            Grid.Row="0"
            Background="{ThemeResource SystemControlHighlightAltListAccentLowBrush}"
            >
            <Button Name="Menu"
                    Content="&#xE700;"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="22"
                    RelativePanel.AlignLeftWithPanel="True"
                    RelativePanel.AlignVerticalCenterWithPanel="True"
                    Background="Transparent"
                    Visibility="Collapsed"
                    >
            </Button>
            <TextBlock Name="Title"
                       Text="发送"
                       RelativePanel.RightOf="Menu"
                       FontSize="22">
            </TextBlock>
        </RelativePanel>
        <RelativePanel Grid.Row="2"
                       Background="{ThemeResource SystemControlHighlightAltListAccentLowBrush}">
            <Button Name="EmptyButton"
                    Content="&#xE107;"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="24"
                    Margin="0,0,5,0"
                    Background="Transparent"
                    Click="EmptyButton_Click">
            </Button>
            <Button Name="ImageButton"
                    Content="&#xEB9F;"
                    RelativePanel.RightOf="EmptyButton"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="24"
                    Margin="0,0,5,0"
                    Background="Transparent"
                    Click="ImageButton_Click">
            </Button>
            <Button Name="SendButton"
                    Content="&#xE724;"
                    RelativePanel.AlignRightWithPanel="True"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="24"
                    Margin="0,0,5,0"
                    Background="Transparent"
                    Click="SendButton_Click">
                </Button>
        </RelativePanel>
        <ListView Grid.Row="1"
                  CanReorderItems="True"
                  IsItemClickEnabled="True"
                  SelectionMode="None"
                  >
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Margin" Value="0,0,15,0"/>
                </Style>
            </ListView.ItemContainerStyle>
            <ListViewItem Padding="5,0,5,0">
                <RelativePanel>
                    <TextBlock Name="SendTitleView"
                        Text="标题">
                    </TextBlock>
                    <TextBox Name="SendTitle"
                             RelativePanel.RightOf="SendTitleView"
                             RelativePanel.AlignRightWithPanel="True"
                             >
                    </TextBox>
                </RelativePanel>
            </ListViewItem>
            <ListViewItem Padding="5,0,5,0">
                <RelativePanel>
                    <TextBlock Name="SendEmailView"
                        Text="Email">
                    </TextBlock>
                    <TextBox Name="SendEmail"
                             RelativePanel.RightOf="SendEmailView"
                             RelativePanel.AlignRightWithPanel="True"
                             >
                    </TextBox>
                </RelativePanel>
            </ListViewItem>
            <ListViewItem Padding="5,0,5,0">
                <RelativePanel>
                    <TextBlock Name="SendNameView"
                        Text="标题">
                    </TextBlock>
                    <TextBox Name="SendName"
                             RelativePanel.RightOf="SendNameView"
                             RelativePanel.AlignRightWithPanel="True"
                             >
                    </TextBox>
                </RelativePanel>
            </ListViewItem>
            <ListViewItem Padding="5,0,5,0">
                <TextBox Name="SendContent"
                         RelativePanel.AlignRightWithPanel="True"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         MinHeight="200"
                         >
                </TextBox>
            </ListViewItem>
            <ListViewItem>
                <StackPanel>
                    <Image Name="SendImage"></Image>
                    <TextBlock Name="SendImageStr"></TextBlock>
                </StackPanel>
            </ListViewItem>
        </ListView>
    </Grid>
</UserControl>
