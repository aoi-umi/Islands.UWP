<UserControl
    x:Class="Islands.UWP.ThreadView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Islands.UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Name="threadSp" Margin="2">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="标题：">
                </TextBlock>
                <TextBlock Text="{x:Bind thread.title}"
                           Margin="0,0,5,0">
                </TextBlock>
                <TextBlock Text="email："></TextBlock>
                <TextBlock Text="{x:Bind thread.email}"
                           Margin="0,0,5,0"></TextBlock>
                <TextBlock Text="名字："></TextBlock>
                <TextBlock Text="{x:Bind thread.name}"
                           Margin="0,0,5,0"></TextBlock>
            </StackPanel>
            <RelativePanel>
                <TextBlock Name="id"
                           Text="No.">
                </TextBlock>
                <TextBox Name="txtId" 
                         Text="{x:Bind thread.id}" 
                         Margin="0,0,5,0"
                         RelativePanel.RightOf="id">
                </TextBox>
                <TextBlock Name="txtNow" 
                           Text="{x:Bind thread.now}"
                           Margin="0,0,5,0"
                           RelativePanel.RightOf="txtId">
                </TextBlock>
                <TextBlock Name="userid"
                           Text="ID:"
                           RelativePanel.RightOf="txtNow"
                           >
                </TextBlock>
                <TextBlock Name="txtUserid" 
                           Text="{x:Bind thread.userid}"
                           RelativePanel.RightOf="userid"
                           >
                </TextBlock>
                <TextBlock Name="replyCount"
                           Text="回复:"
                           RelativePanel.LeftOf="txtReplyCount"
                           >
                </TextBlock>
                <TextBlock Name="txtReplyCount"
                           Text="{x:Bind thread.replyCount}"
                           RelativePanel.AlignRightWithPanel="True"
                           >
                </TextBlock>
            </RelativePanel>
            <TextBox Name="txtContent"
                     TextWrapping="Wrap"
                     Text="{x:Bind thread.content}"></TextBox>
        </StackPanel>
    </Grid>
</UserControl>
