<UserControl
    x:Class="Islands.UWP.ThreadView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Islands.UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Margin="2">
            <StackPanel>
                <TextBlock Text="{x:Bind thread.Title}"
                           Visibility="{x:Bind thread.IsHadTitle}">
                </TextBlock>
                <TextBlock Text="{x:Bind thread.Email}"
                           Visibility="{x:Bind thread.IsHadEmail}">
                </TextBlock>
                <TextBlock Text="{x:Bind thread.Name}"
                           Visibility="{x:Bind thread.IsHadName}">
                </TextBlock>
                <TextBlock Name="txtCreateDate" 
                           Text="{x:Bind thread.CreateDate}"
                           Margin="0,0,5,0">
                </TextBlock>
            </StackPanel>
            <RelativePanel>
                <TextBlock Name="id"
                           Text="No.">
                </TextBlock>
                <TextBox Name="txtId" 
                         Text="{x:Bind thread.No}" 
                         Margin="0,0,5,0"
                         RelativePanel.RightOf="id">
                </TextBox>
                <TextBlock Name="userid"
                           Text="ID:"
                           RelativePanel.RightOf="txtId"
                           >
                </TextBlock>
                <TextBlock Name="txtUserid" 
                           Text="{x:Bind thread.ID}"
                           RelativePanel.RightOf="userid"
                           >
                </TextBlock>
                <TextBlock Name="replyCount"
                           Text="回复:"
                           RelativePanel.LeftOf="txtReplyCount"
                           >
                </TextBlock>
                <TextBlock Name="txtReplyCount"
                           Text="{x:Bind thread.ReplyCount}"
                           RelativePanel.AlignRightWithPanel="True"
                           >
                </TextBlock>
            </RelativePanel>
            <TextBox Name="txtContent"
                     TextWrapping="Wrap"
                     Text="{x:Bind thread.Content}"></TextBox>
            <Image Name="imageBox"  
                   MaxHeight="200" 
                   MaxWidth="200" 
                   HorizontalAlignment="Left"
                   ImageFailed="ImageBox_ImageFailed" />
            <!--<TextBox Text="{x:Bind thread.Image}"></TextBox>-->
        </StackPanel>
    </Grid>
</UserControl>
